% Pivot calibration using the pseudo-inverse method

function [Pcal, Ppiv] = pivotCalibration(RList, pList)
    Rall = [];
    tall = [];
    disp(size(RList));
    for i = 1:size(RList)
        catR = [Rlist(1,:,1;
        vertcat(Rall, horzcat(RList(i), -1.*eye(3)));
        vertcat(tall, -1.*pList(i));
    end
    
    x = tall\Rall;
    
    Pcal = x(1:3);
    Ppiv = x(4:6);

end